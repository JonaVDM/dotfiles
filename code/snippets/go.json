{
  "Return Error": {
    "prefix": "return-err",
    "body": ["if err != nil {", "\treturn ${1:err}", "}", "$0"]
  },

  "Post handler": {
    "prefix": "hanlder-post",
    "body": [
      "func (a *App) $1() http.HandlerFunc {",
      "\ttype Body struct {",
      "\t\tMessage string `json:\"message\"`,",
      "\t}",
      "",
      "\ttype Response struct {",
      "\t\tMessage string `json:\"message\"`,",
      "\t}",
      "",
      "\treturn func(w http.ResponseWriter, r *http.Request) {",
      "\t\t$0body := Body{}",
      "\t\terr := json.NewDecoder(r.Body).Decode(&body)",
      "\t\tif err != nil {}",
      "\t\tdefer r.Body.Close()",
      "",
      "\t\tjson.NewEncoder(w).Encode(Response{",
      "\t\t\tMessage: \"echo \" + body.Message,",
      "\t\t})",
      "\t}",
      "}",
      ""
    ],
    "description": "Quickly create a new route"
  },

  "Get handler": {
    "prefix": "hanlder-get",
    "body": [
